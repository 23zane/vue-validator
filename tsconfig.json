{
	"compilerOptions": {
		"target": "es6",
		"strict": true,
		"module": "es2020",
		"skipLibCheck": true,
		"lib": [
			"es2020",
			"dom",
			"dom.iterable"
		],
		"moduleResolution": "node",
		"verbatimModuleSyntax" : true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"allowJs": false,
		"outDir": "lib",
		"typeRoots": [
			"node_modules/@types",
		],
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts"],
	"exclude": [
		"node_modules",
		"**/__tests__/*"
	]
}